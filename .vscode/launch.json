{
	"configurations": [
	{
		"name": "Basic C Launch",
		"type": "cppdbg",
		"request": "launch",
		"program": "${workspaceFolder}/cub3D",
		"args": ["maps/test.cub"],
		"stopAtEntry": false,
		"cwd": ".",
		"environment": [],
		"externalConsole": false,
		"MIMode": "gdb",
		"setupCommands": [
			{
				"description": "Enable pretty-printing for gdb",
				"text": "-enable-pretty-printing",
				"ignoreFailures": true
			},
			{
				"description": "Set Disassembly Flavor to Intel",
				"text": "-gdb-set disassembly-flavor intel",
				"ignoreFailures": true
			}
		]
	}
	]
}